{
  "name": "sitedown",
  "description": "Generate a static HTML site from a collection of markdown files.",
  "version": "5.0.0",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bin": {
    "sitedown": "./bin.js"
  },
  "bugs": {
    "url": "https://github.com/ungoldman/sitedown/issues"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "cliclopts": "^1.1.1",
    "event-stream": "3.3.4",
    "gaze": "^1.1.1",
    "highlight.js": "^10.4.1",
    "markdown-it": "^12.0.3",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-deflist": "^2.0.1",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-github-headings": "^2.0.0",
    "markdown-it-highlightjs": "^3.0.0",
    "markdown-it-ins": "^3.0.0",
    "markdown-it-mark": "^3.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "minimist": "^1.1.1",
    "mkdirp": "^1.0.4",
    "readdirp": "^3.5.0"
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "gh-release": "^4.0.4",
    "live-server": "^1.1.0",
    "npm-run-all2": "^5.0.0",
    "rimraf": "^3.0.2",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4",
    "tap-spec": "^5.0.0",
    "tape": "^5.0.1"
  },
  "homepage": "https://github.com/ungoldman/sitedown",
  "keywords": [
    "generator",
    "markdown",
    "site",
    "static",
    "website"
  ],
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungoldman/sitedown.git"
  },
  "scripts": {
    "gh-pages": "npm run site && gh-pages -d site",
    "postrelease": "npm publish",
    "pretest": "standard | snazzy",
    "release": "gh-release",
    "serve:site": "live-server site",
    "serve:watch": "npm run site:html -- -w",
    "site": "run-s site:*",
    "site:clean": "rm -rf site",
    "site:html": "./bin.js . -b site -l docs/layout.html",
    "start": "npm-run-all site --parallel serve:*",
    "test": "tape test/*.js | tap-spec"
  }
}
